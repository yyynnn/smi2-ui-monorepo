{
  "name": "smi2-ui-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint-staged-husky": "lint-staged",
    "tsc": "turbo tsc",
    "test": "turbo test",
    "storybook": "turbo storybook",
    "storybook-build": "turbo storybook-build",
    "format-lint": "prettier --config .prettierrc --check --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown -l .",
    "commit": "git-cz",
    "clean": "npm exec --workspaces -- shx rm -rf node_modules .next .turbo coverage dist compiled build-next-static build-storybook-static && shx rm -rf node_modules",
    "remove-turbo-cache": "shx rm -rf ./node_modules/.cache/turbo",
    "update-dependencies": "turbo update-dependencies && npx npm-check-updates -u",
    "cm": "npx git-cz",
    "cm:retry": "npx git-cz --retry"
  },
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@hookform/resolvers": "3.1.1",
    "@mui/icons-material": "5.14.0",
    "@mui/material": "5.14.0",
    "@tanstack/react-query": "4.29.19",
    "@tanstack/react-query-devtools": "4.29.19",
    "axios": "1.4.0",
    "date-fns": "2.30.0",
    "next": "13.4.9",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.45.1",
    "zod": "3.21.4",
    "orval": "6.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.6",
    "@commitlint/config-conventional": "17.6.6",
    "@storybook/addon-essentials": "7.0.27",
    "@storybook/nextjs": "7.0.27",
    "@storybook/react": "7.0.27",
    "@testing-library/dom": "9.3.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "20.4.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.14",
    "commitizen": "4.3.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "postcss": "8.4.25",
    "prettier": "2.8.8",
    "pretty-quick": "3.1.3",
    "shx": "0.3.4",
    "storybook": "7.0.27",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsup": "7.1.0",
    "turbo": "1.10.7",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": ">=18.16.1",
    "npm": ">=9.5.1"
  }
}
